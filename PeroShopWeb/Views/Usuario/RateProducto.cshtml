@{
    Layout = "_LayoutUsuario";
}


<body>
    <main class="container">
        <div class="my-3 p-3 bg-light rounded shadow-sm">
            <h1>Detalles del producto</h1>
            <form class="needs-validation" method="post" novalidate>

                <hr class="my-4">

                @{
                    foreach (var j in ViewBag.inter)
                    {
                        foreach (var k in ViewBag.Productos)
                        {
                            if (j.idproducto == k.ID)
                            {
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        Nombre
                                    </dt>
                                    <dd class="col-sm-10">
                                        @k.Nombre
                                    </dd>
                                    @foreach (var c in ViewBag.colores)
                                    {
                                        if (j.idcolor == c.ID)
                                        {
                                            <dt class="col-sm-2">
                                                Color
                                            </dt>
                                            <dd class="col-sm-10">
                                                @c.Color
                                            </dd>
                                        }
                                    }
                                    @foreach (var a in ViewBag.alma)
                                    {
                                        if (k.Categoria == "Telefonos")
                                        {
                                            if (j.idalmacenamiento == a.ID)
                                            {
                                                <dt class="col-sm-2">
                                                    Almacenamiento
                                                </dt>
                                                <dd class="col-sm-10">
                                                    @a.Almacenamineto
                                                </dd>
                                            }
                                        }
                                    }
                                    <dt class="col-sm-2">
                                        Calificacion
                                    </dt>
                                    <dd class="col-sm-10">
                                        <select name="Calificacion" id="rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <option value="@i">@i estrellas</option>
                                            }
                                        </select>
                                    </dd>
                                </dl>
                            }
                        }
                    }
                }
                <hr class="my-4">

                <button type="submit" asp-action="RateProducto" asp-controller="Usuario">Calificar Productos</button>

            </form>
            <br />
            <h1>@ViewBag.Mensaje</h1>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/form-validation.js"></script>
</body>