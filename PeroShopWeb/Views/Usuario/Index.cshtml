@{
    Layout = "_LayoutUsuario";
}

<body>

    <!-- Main Content -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h1>Bienvenido, Administrador</h1>
                <p>¡Hola! Bienvenido al panel de usuario;. Aquí puedes ver el estado de tus productos.</p>
            </div>
            <div class="col-md-6">
                <div id="clock" class="text-end">
                    <h2 id="time" class="mt-5"></h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Moment.js for time formatting -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script>
        // Function to update time
        function updateTime() {
            var now = moment().format('HH:mm:ss');
            document.getElementById('time').innerText = now;
        }
        // Initial call to update time
        updateTime();
        // Update time every second
        setInterval(updateTime, 1000);
    </script>
</body>