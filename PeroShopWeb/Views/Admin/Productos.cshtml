@model IEnumerable<PeroShopWeb.Models.Producto>
@{
    Layout = "_LayoutAdmin2";
}

<body>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Actividad</th>
                    <th scope="col">Nombre del producto</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">  </th>
                    <th scope="col"><a asp-action="NuevoProducto" asp-controller="Admin" class="btn btn-primary text-white">Nuevo Producto</a></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var u in Model)
                {
                    <form asp-action="EditarProducto" asp-controller="Admin" method="get">
                        <input name="Nombre" type="hidden" value="@u.Nombre" />
                        <input name="Categoria" type="hidden" value="@u.Categoria" />
                        <input name="Id" type="hidden" value="@u.ID" />
                        <tr>
                            <td>@u.Activo</td>
                            <td>@u.Nombre</td>
                            <td>@u.Categoria</td>
                            <td>
                            <td>
                                <button class="btn btn-primary text-white">Agregar Productos</button>
                            </td>
                            </td>
                        </tr>
                    </form>
                }
            </tbody>
        </table>
    </div>
</body>