@model PeroShopWeb.Models.ProductosViewModel
@{
    Layout = "_LayoutAdmin2";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <main class="container">
        <div class="my-3 p-3 bg-light rounded shadow-sm">
            <h1>Agregar características</h1>
            <form class="needs-validation" novalidate method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-md-5">
                        <label class="form-label">Color del Producto</label>
                        <select name="idcolor" class="form-select" id="combobox1" required>
                            <option value="">Color...</option>
                            @foreach (var u in Model.ProductoColors)
                            {
                                <option value="@u.ID">@u.Color</option>
                            }
                        </select>
                        <div class="invalid-feedback">
                            Seleccione un Color válido.
                        </div>
                    </div>
                    @if (ViewBag.Categoria == "Telefonos")
                    {
                        <div class="col-md-5">
                            <label class="form-label">Almacenamiento del Producto</label>
                            <select name="idalmacenamiento" class="form-select" id="Categoria" required>
                                <option value="">Almacenamiento...</option>
                                @foreach (var u in Model.productoAlmacenamientos)
                                {
                                    <option value="@u.ID">@u.Almacenamineto</option>
                                }
                            </select>
                            <div class="invalid-feedback">
                                Seleccione un Almacenamiento válido.
                            </div>
                        </div>
                    }
                    <div class="col-md-4">
                        <label class="form-label">Precio del producto</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">$</span>
                            <input name="PrecioVenta" type="text" class="form-control" aria-label="Amount (to the nearest dollar)" required>
                            <span class="input-group-text">MXN</span>
                        </div>
                        <div class="invalid-feedback">
                            Coloque un precio.
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="formFileMultiple" class="form-label">Seleccione las imágenes que llevará el producto</label>
                            <input name="Imagen" class="form-control" type="file" id="formFileMultiple" multiple>
                        </div>
                        <div class="invalid-feedback">
                            Zip code required.
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Cantidad</label>
                        <br />
                        <input name="Stock" type="number" id="Existencia" required />
                        <div class="invalid-feedback">
                            Seleccione una cantidad.
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>Descripción del producto</label>
                        <textarea name="Caracteristicas" class="form-control" id="Descripcion" rows="3" required></textarea>
                    </div>
                    <div class="invalid-feedback">
                        Se requiere una descripción.
                    </div>
                </div>
                <hr class="my-4">
                <button type="button" class="w-100 btn btn-primary btn-lg" id="showConfirmModal">Agregar características del Producto</button>
            </form>
            <br />
            <h1>@ViewBag.Mensaje</h1>
        </div>
    </main>

    <!-- Modal de confirmación -->
    <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalLabel">Confirmar Modificacion Características</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Está seguro de que desea modificar estas características al producto?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-primary" id="confirmButton">Sí</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/form-validation.js"></script>
    <script>
        document.getElementById('showConfirmModal').addEventListener('click', function () {
            var confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'), {});
            confirmModal.show();
        });

        document.getElementById('confirmButton').addEventListener('click', function () {
            // Envía el formulario cuando el usuario hace clic en "Sí"
            document.querySelector('form').submit();
        });
    </script>
</body>
</html>
