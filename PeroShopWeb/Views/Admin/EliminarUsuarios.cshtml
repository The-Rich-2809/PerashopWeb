@model PeroShopWeb.Models.Usuario

@{
    Layout = "_LayoutAdmin2";
}

<body>
    <main class="container">
        <div class="my-3 p-3 bg-light rounded shadow-sm">
            <h1>Eliminar usuario</h1>
            <form class="needs-validation" novalidate method="post">

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Correo)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Correo)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TipoUsuario)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TipoUsuario)
                    </dd>
                </dl>
                <hr class="my-4">

                <button asp-controller="Admin" asp-action="EliminarUsuario" method="post" class="w-100 btn btn-danger btn-lg" type="submit">Eliminar al Usuario</button>
            </form>
            <br />
            <h1>@ViewBag.Mensaje</h1>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/form-validation.js"></script>
</body>