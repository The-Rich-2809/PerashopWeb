@model PeroShopWeb.Models.Usuario
@{
    Layout = "_LayoutAdmin2";
}
<body>
    <main class="container">
        <div class="my-3 p-3 bg-light rounded shadow-sm">
            <h1>Editar Usuario</h1>
            <form class="needs-validation" novalidate method="post" enctype="multipart/form-data">
                <input name="Contrasena" type="hidden" value="@Html.DisplayFor(model => model.Contrasena)" />
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Correo" class="form-label">Correo</label>
                        <br />
                        <input asp-for="Correo" name="Correo" type="text" class="form-control" id="Correo" readonly>
                        <div class="invalid-feedback">
                            Ingrese un correo válido
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <label asp-for="Nombre" class="form-label">Nombre del Usuario</label>
                        <input asp-for="Nombre" name="Nombre" type="text" class="form-control" id="Producto" readonly>
                        <div class="invalid-feedback">
                            Se requiere un nombre válido.
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="TipoUsuario" class="form-label">Nivel del Usuario</label>
                        <select asp-for="TipoUsuario" name="TipoUsuario" class="form-select" id="Nivel" required>
                            <option value="">Nivel...</option>
                            <option value="Cliente">Cliente</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <div class="invalid-feedback">
                            Seleccione un nivel válido.
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <button type="button" class="w-100 btn btn-primary btn-lg" id="showConfirmModal">Modificar el Usuario</button>
            </form>
            <br />
            <h1>@ViewBag.Mensaje</h1>
        </div>
    </main>

    <!-- Modal de confirmación -->
    <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalLabel">Confirmar Modificación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Está seguro de que desea modificar este usuario?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-primary" id="confirmButton">Sí</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/form-validation.js"></script>
    <script>
        document.getElementById('showConfirmModal').addEventListener('click', function () {
            var confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'), {});
            confirmModal.show();
        });

        document.getElementById('confirmButton').addEventListener('click', function () {
            // Envía el formulario cuando el usuario hace clic en "Sí"
            document.querySelector('form').submit();
        });
    </script>
</body>
</html>
