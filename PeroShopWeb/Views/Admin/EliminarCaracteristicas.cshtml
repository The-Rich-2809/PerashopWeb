@model PeroShopWeb.Models.ProductosViewModel
@{
    Layout = "_LayoutAdmin2";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <main class="container">
        <div class="my-3 p-3 bg-light rounded shadow-sm">
            <h1>Eliminar características</h1>
            <form class="needs-validation" novalidate method="post" enctype="multipart/form-data">
                @{
                    foreach (var j in Model.ProductosInter)
                    {
                        <dl class="row">
                            <dt class="col-sm-2">
                                Color
                            </dt>
                            @foreach (var i in Model.ProductoColors)
                            {
                                if (j.idcolor == i.ID)
                                {
                                    <dd class="col-sm-10">
                                        @i.Color
                                    </dd>
                                }
                            }

                            @if (ViewBag.Categoria == "Telefonos")
                            {
                                foreach (var i in Model.productoAlmacenamientos)
                                {
                                    if (j.idalmacenamiento == i.ID)
                                    {
                                        <dt class="col-sm-2">
                                            Almacenamiento
                                        </dt>
                                        <dd class="col-sm-10">
                                            @i.Almacenamineto
                                        </dd>
                                    }
                                }
                            }

                            <dt class="col-sm-2">
                                Precio
                            </dt>
                            <dd class="col-sm-10">
                                @j.PrecioVenta
                            </dd>
                            <dt class="col-sm-2">
                                Descripcion
                            </dt>
                            <dd class="col-sm-10">
                                @j.Caracteristicas
                            </dd>
                        </dl>
                        <button id="submitButton" type="button" class="w-100 btn btn-danger btn-lg" data-toggle="modal" data-target="#myModal" asp-action="EliminarCaracteristicas" asp-controller="Admin" asp-route-idinter="@j.ID">Eliminar Caracteristica</button>
                    }
                }
                
            </form>
            <br />
            <h1>@ViewBag.Mensaje</h1>
        </div>
    </main>

    <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>¿Desea eliminar esta caracteristica?</p>
                </div>
                <div class="modal-footer">
                    <button id="yesBtn" class="btn btn-danger">Yes</button>
                    <button id="noBtn" class="btn btn-secondary" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/form-validation.js"></script>
    <script>
        // Obtener el botón que abre el modal
        var openModalBtn = document.querySelector('[data-toggle="modal"]');

        // Obtener el botón de Sí
        document.getElementById('yesBtn').addEventListener('click', function () {
            // Envía el formulario cuando el usuario hace clic en "Sí"
            document.querySelector('form').submit();
        });

        var submitButton = document.getElementById("submitButton");

        // Cuando el usuario hace clic en el botón, abre el modal
        btn.onclick = function () {
            $('#myModal').modal('show');
        }

        yesBtn.onclick = function () {
            // Cambiar el tipo del botón de agregar características a submit
            submitButton.type = 'submit';
            // Hacer clic en el botón de agregar características para enviar el formulario
            submitButton.click();
        }
    </script>
</body>
</html>
