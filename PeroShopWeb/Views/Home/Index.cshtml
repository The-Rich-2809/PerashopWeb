@model PeroShopWeb.Models.ProductosViewModel

@{
    if (ViewBag.Nivel == "Cliente")
    {
        Layout = "_LayoutCliente";
    }
    if (ViewBag.Nivel == "Admin")
    {
        Layout = "_LayoutAdmin";
    }
}

<head>
</head>

<style>
    .video-container {
        position: relative;
        width: 100%;
        height: 430px; /* Altura del carrusel */
        margin: 0 auto; /* Centrar el contenedor del video */
    }

        .video-container video {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ajustar el video al contenedor */
            display: block;
        }

    .categories-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
    }

        .categories-container .cat-item {
            margin: 10px; /* Espaciado entre los elementos */
        }
</style>

<main class="contenedor">
    <!-- Carousel Start -->
    <div class="container-fluid mb-3">
        <div class="row justify-content-center">
            <div class="col-lg-12 px-0">
                <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#header-carousel" data-slide-to="1"></li>
                        <li data-target="#header-carousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item position-relative active" style="height: 430px;">
                            <img class="position-absolute w-100 h-100" src="~/Images/Products/carusel 1.png" style="object-fit: cover;">
                            <div class="d-flex align-items-center justify-content-center" style="height: 100%;">
                                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                    <div class="p-3" style="max-width: 700px;">
                                        <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">PeraPhone</h1>
                                        <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Descubre la innovación y calidad en cada dispositivo. Encuentra el celular perfecto para ti.</p>
                                        <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="Peraphones.html">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item position-relative" style="height: 430px;">
                            <img class="position-absolute w-100 h-100" src="~/Images/Products/carusel 2.jpg" style="object-fit: cover;">
                            <div class="d-flex align-items-center justify-content-center" style="height: 100%;">
                                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                    <div class="p-3" style="max-width: 700px;">
                                        <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Audifonos</h1>
                                        <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Sonido excepcional en tus oídos. Compra ahora.</p>
                                        <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="Airpods.html">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item position-relative" style="height: 430px;">
                            <img class="position-absolute w-100 h-100" src="~/Images/Products/carusel 3.jpg" style="object-fit: cover;">
                            <div class="d-flex align-items-center justify-content-center" style="height: 100%;">
                                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                    <div class="p-3" style="max-width: 700px;">
                                        <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Fundas</h1>
                                        <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Protege tu dispositivo con estilo. Compra fundas hoy.</p>
                                        <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#header-carousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#header-carousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Carousel End -->
    <!-- Categories Start -->
    <div class="container-fluid pt-5">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">CATEGORIAS</span></h2>
        <div class="categories-container">
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <a class="text-decoration-none" href="Peraphones.html">
                    <div class="cat-item d-flex align-items-center mb-4">
                        <div class="overflow-hidden" style="width: 100px; height: 100px;">
                            <img class="img-fluid" src="~/Images/Products/13.jpg" alt="">
                        </div>
                        <div class="flex-fill pl-3">
                            <h6>Phones</h6>
                            <small class="text-body">10 Products</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <a class="text-decoration-none" href="Airpods.html">
                    <div class="cat-item img-zoom d-flex align-items-center mb-4">
                        <div class="overflow-hidden" style="width: 100px; height: 100px;">
                            <img class="img-fluid" src="~/Images/Products/Airpods1.jpeg" alt="">
                        </div>
                        <div class="flex-fill pl-3">
                            <h6>Audifonos</h6>
                            <small class="text-body">4 Products</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <a class="text-decoration-none" href="detailfunda.html">
                    <div class="cat-item img-zoom d-flex align-items-center mb-4">
                        <div class="overflow-hidden" style="width: 100px; height: 100px;">
                            <img class="img-fluid" src="~/Images/Products/Fundas.png" alt="">
                        </div>
                        <div class="flex-fill pl-3">
                            <h6>Fundas</h6>
                            <small class="text-body">15 Products</small>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <!-- Categories End -->
    <!-- Video Start -->
    <div class="container-fluid pt-5 pb-3">
        <div class="row px-xl-5">
            <div class="col-md-12">
                <div class="product-offer mb-30" style="height: auto;">
                    <div class="video-container">
                        <video id="hoverVideo" muted>
                            <source src="~/Images/Products/peraphone 15.mp4" type="video/mp4">
                            Tu navegador no soporta el elemento de video.
                        </video>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Video End -->
    <!-- Products Start -->
    <div class="container-fluid pt-5 pb-3">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">PRODUCTOS RECIENTES</span></h2>
        <div class="row px-xl-5">

            @{
                int u = 0;
                foreach (var p in Model.Productos)
                {
                    foreach (var i in Model.ProductosInter)
                    {
                        if (p.ID == i.idproducto)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                                <div class="product-item bg-light mb-4">
                                    <div class="product-img position-relative overflow-hidden">
                                        <img class="img-fluid w-100" src="@i.RutaImagen" alt="">
                                        <div class="product-action">
                                            <a class="btn btn-outline-dark btn-square" href="@Url.Action("DetallesProductos", "Productos", new { valor = p.ID })"><i class="fa fa-shopping-cart"></i></a>
                                        </div>
                                    </div>
                                    <div class="text-center py-4">
                                        <a class="h6 text-decoration-none text-truncate" href="">@p.Nombre</a>
                                        <div class="d-flex align-items-center justify-content-center mt-2">
                                            <h5>$@i.PrecioVenta</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            u++;
                        }
                    }
                    if (u == 3)
                    {
                        break;
                    }
                }
            }
        </div>
    </div>
    <!-- Products End -->

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var video = document.getElementById("hoverVideo");

            video.addEventListener("mouseover", function () {
                video.play();
            });

            video.addEventListener("mouseout", function () {
                video.pause();
                video.currentTime = 0; // Reinicia el video cuando el mouse se va
            });
        });
    </script>
</main>
